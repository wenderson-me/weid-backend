# Ambiente
NODE_ENV=development

# Servidor
PORT=5000
API_PREFIX=/api

# MongoDB
MONGODB_URI=mongodb://localhost:27017/weihu

# JWT (Autenticação)
JWT_SECRET=weihu-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=weihu-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRATION=7d

# CORS
CLIENT_URL=http://localhost:5173

# Logs
LOG_LEVEL=info

# Upload de arquivos
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880  # 5MB

# Limites de requisições (Rate limiting)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100