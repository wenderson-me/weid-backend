# Server Configuration
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1

# Database Type (mongodb | postgres)
DB_TYPE=postgres

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/weid_db

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=weid_db
POSTGRES_SSL=false

# JWT Configuration
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_required
JWT_ACCESS_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d
JWT_RESET_PASSWORD_EXPIRATION=10m

# CORS Configuration
# Multiple origins separated by comma
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com,https://app.yourdomain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15000  # 15 seconds
RATE_LIMIT_MAX=100  # 100 requests per 15 seconds
