{
  "name": "weid-backend",
  "version": "1.0.0",
  "description": "Backend para a aplicação Weid de gerenciamento pessoal",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "build:clean": "rm -rf dist && tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "db:setup": "node src/scripts/setup-postgres.js",
    "db:test": "node src/scripts/test-connection.js",
    "db:create": "ts-node src/scripts/create-tables.ts",
    "db:create:prod": "NODE_ENV=production ts-node src/scripts/create-tables.ts",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop weid-backend",
    "pm2:restart": "pm2 restart weid-backend",
    "pm2:delete": "pm2 delete weid-backend",
    "pm2:logs": "pm2 logs weid-backend",
    "pm2:monit": "pm2 monit",
    "deploy": "npm run build && pm2 restart ecosystem.config.js --env production",
    "prod:setup": "npm install --production && npm run build && npm run db:create:prod"
  },
  "keywords": [
    "weid",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "pm2": "^5.3.0",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.5",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.19",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.8.4",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.4",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.2",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
